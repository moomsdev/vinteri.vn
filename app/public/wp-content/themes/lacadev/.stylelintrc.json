{
  "extends": "stylelint-config-recommended-scss",
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "rules": {
    "no-empty-source": null,
    "no-descending-specificity": null,
    "indentation": 2,
    "order/order": [
      "custom-properties",
      "dollar-variables",
      "declarations",
      "rules",
      "at-rules"
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "aspect-ratio",
          "color-scheme"
        ]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "where"
        ]
      }
    ],
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": [
          "view-transition-new",
          "view-transition-old",
          "view-transition-image-pair"
        ]
      }
    ]
  }
}
